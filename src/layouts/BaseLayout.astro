---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Muhayat Techlabs",
  description = "Website pribadi dosen untuk materi kuliah & artikel",
} = Astro.props;
---
<html lang="id" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Brand colors (bisa ganti hex sesuai kebutuhan) -->
    <style>
      :root{
        --brand: #1C8139;     /* utama */
        --brand-600:#000000;  /* tint opsional */
        --brand-700:#3d85c6;  /* shade opsional */
      }
    </style>
  </head>

  <body class="antialiased text-gray-800 bg-white selection:bg-emerald-200/60">
    <!-- Header dengan logo + drawer (komponen dari langkah sebelumnya) -->
    <Header />

    <!-- Konten halaman -->
    <main id="content" class="min-h-[60vh]">
      <slot />
    </main>

    <!-- Footer (gunakan komponen Footer Anda) -->
    <Footer />
  </body>
</html>
